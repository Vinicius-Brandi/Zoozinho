<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="ZooConsole.Models"
                   assembly="ZooConsole">

	<class name="Recinto" table="recinto" lazy="false">
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">recinto_seq</param>
			</generator>
		</id>

		<property name="Nome" column="nome" type="string" not-null="true" length="100" />
		<property name="CapacidadeMaxHabitats" column="capacidademaxhabitats" type="int" not-null="true" />

		<many-to-one name="Categoria" class="Categoria" column="categoriaid" unique="true" not-null="true" />

		<bag name="Habitats" inverse="true" cascade="all-delete-orphan" lazy="false">
			<key column="recintoid"/>
			<one-to-many class="Habitat"/>
		</bag>
	</class>

</hibernate-mapping>

