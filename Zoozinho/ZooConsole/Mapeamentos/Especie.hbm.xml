<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="ZooConsole.Models"
                   assembly="ZooConsole">

	<class name="Especie" table="especie" lazy="false">
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">especie_seq</param>
			</generator>
		</id>

		<property name="Nome" column="nome" type="string" not-null="true" length="100" />
		<property name="Alimentacao" column="alimentacao" type="string" />
		<property name="Comportamento" column="comportamento" type="string" />

		<many-to-one name="Categoria" class="Categoria" column="categoriaid" not-null="true" />

		<bag name="Animais" inverse="true" cascade="all-delete-orphan" lazy="false">
			<key column="especieid" />
			<one-to-many class="Animal"/>
		</bag>
	</class>
</hibernate-mapping>

